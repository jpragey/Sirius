  </parent>
        

  <dependencies>
  
    <dependency>
      <groupId>org.sirius</groupId>
      <artifactId>org.sirius.common</artifactId>
    </dependency>
    
    <dependency>
      <groupId>org.sirius</groupId>
      <artifactId>org.sirius.sdk</artifactId>
    </dependency>

	<!-- https://mvnrepository.com/artifact/org.testng/testng -->
